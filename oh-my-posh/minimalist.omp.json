{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "blocks": [
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "type": "session",
          "style": "plain",
          "foreground": "#4FC3F7",
          "template": "{{ .UserName }}",
          "properties": {
            "display_host": false
          }
        },
        {
          "type": "path",
          "style": "plain",
          "foreground": "#E6E6E6",
          "template": " {{ .Path }}",
          "properties": {
            "style": "short",
            "folder_separator_icon": "/"
          }
        },
        {
          "type": "git",
          "style": "plain",
          "foreground": "#4FC3F7",
          "template": " {{ .HEAD }}{{ if .BranchStatus }} {{ .BranchStatus }}{{ end }}{{ if .Working.Changed }} *{{ end }}{{ if .Staging.Changed }} +{{ end }}",
          "properties": {
            "fetch_status": true,
            "fetch_upstream_icon": false
          }
        },
        {
          "type": "python",
          "style": "plain",
          "foreground": "#FFB74D",
          "template": "{{ if .Venv }} {{ .Venv }}{{ end }}{{ if .Major }} py{{ .Major }}.{{ .Minor }}{{ end }}",
          "properties": {
            "display_virtual_env": true,
            "fetch_version": true
          }
        }
      ]
    },
    {
      "type": "prompt",
      "alignment": "left",
      "newline": true,
      "segments": [
        {
          "type": "status",
          "style": "plain",
          "foreground": "#4CAF50",
          "foreground_templates": [
            "{{ if gt .Code 0 }}#F44336{{ end }}"
          ],
          "template": "‚ùØ ",
          "properties": {
            "always_enabled": true
          }
        }
      ]
    }
  ],
  "version": 3,
  "final_space": false
}
