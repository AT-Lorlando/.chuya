{
    "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
    "version": 2,
    "blocks": [{
            "type": "prompt",
            "alignment": "left",
            "segments": [{
                    "type": "session",
                    "style": "plain",
                    "foreground": "#007ACC",
                    "template": "{{ .UserName }} "
                },
                {
                    "type": "path",
                    "style": "plain",
                    "foreground": "#91DDC2",
                    "properties": {
                        "style": "short"
                    },
                    "template": "{{ .Path }} "
                },
                {
                    "type": "git",
                    "style": "plain",
                    "foreground": "#FF6B6B",
                    "properties": {
                        "fetch_status": false
                    },
                    "template": "{{ .HEAD }} "
                }
            ]
        },
        {
            "type": "prompt",
            "alignment": "left",
            "newline": true,
            "segments": [{
                "type": "status",
                "style": "plain",
                "foreground": "#4CAF50",
                "foreground_templates": [
                    "{{ if gt .Code 0 }}#F44336{{ end }}"
                ],
                "properties": {
                    "always_enabled": true
                },
                "template": "‚ùØ "
            }]
        }
    ]
}